{
    "name": "sdra-build",
    "source": {
        "type": "CODEPIPELINE",
        "buildspec": "AWS-CICD/CodeBuild/build-specs/buildspec-build.yml",
        "insecureSsl": false
    },
    "artifacts": {
        "type": "CODEPIPELINE",
        "name": "sdra-build",
        "packaging": "NONE",
        "encryptionDisabled": false
    },
    "environment": {
        "type": "LINUX_CONTAINER",
        "image": "aws/codebuild/amazonlinux2-x86_64-standard:3.0",
        "computeType": "BUILD_GENERAL1_SMALL",
        "environmentVariables": [
            {
                "name": "IMAGE_REPO_NAME",
                "value": "sdra",
                "type": "PLAINTEXT"
            },
            {
                "name": "AWS_ACCOUNT_ID",
                "value": "<aws_account>",
                "type": "PLAINTEXT"
            }
        ],
        "privilegedMode": true,
        "imagePullCredentialsType": "CODEBUILD"
    },
    "serviceRole": "<code_build_service_role_arn>",
    "timeoutInMinutes": 60,
    "queuedTimeoutInMinutes": 480,
    "logsConfig": {
        "cloudWatchLogs": {
            "status": "ENABLED"
        },
        "s3Logs": {
            "status": "ENABLED",
            "location": "sdra-build/sdra-build-log",
            "encryptionDisabled": true
        }
    }
}